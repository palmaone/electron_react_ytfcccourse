{
    "compilerOptions": {
        //require strict types (null-safe)
        "strict": true,
        // tell Typescript to generate ESM (ES Modules) Syntax
        "target": "ESNext",
        // tell Typescript to require ESM Syntax as input (including .js file imports)
        "module": "NodeNext",
        //define where to put the generated JS
        "outDir": "../../dist-electron",
        //ignore errors from dependencies
        "skipLibCheck": true
    }
}